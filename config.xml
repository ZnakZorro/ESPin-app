<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.espinapp"
        versionCode="10" 
        version   = "1.0.0">

    <name>KODis</name>

    <description>
        ESPin control powered by PhoneGap 
    </description>
    
    <author href="http://zszczech.zut.edu.pl/git" email="zs@g.pl">
        ZnakZorro
    </author>

<preference name="permissions"                value="none"/>	
<content src="index.html" />
<plugin name="cordova-plugin-whitelist" version="1" />
<access origin="*" />
<allow-intent href="http://*/*" />
<allow-intent href="https://*/*" />
<allow-intent href="tel:*" />
<allow-intent href="sms:*" />
<allow-intent href="mailto:*" />
<allow-intent href="geo:*" />	


    <preference name="phonegap-version" value="cli-5.2.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="true" />
    
<access origin="*" launch-external="yes" />
<access origin="http://zszczech.com.pl" subdomains="true" />
<access origin="http://192.168.1.109" subdomains="true" />
<access origin="http://192.168.4.1" subdomains="true" />
<access origin="http://82.145.73.156" subdomains="true" />
<access origin="http://82.145.64.137" subdomains="true" />
<access origin="http://127.1.1.0" subdomains="true" />


<allow-intent href="*" />
<allow-navigation href="*" />

		<icon src="espin-app.png" />
		<icon src="espin-app.png" gap:platform="android" gap:density="ldpi" />
		<icon src="espin-app.png" gap:platform="android" gap:density="mdpi" />
		<icon src="espin-app.png" gap:platform="android" gap:density="hdpi" />
		<icon src="espin-app.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="espin-app.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="espin-app.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="espin-app.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="espin-app.png" gap:platform="android" gap:density="xhdpi" />

<access origin="*" onlyInBrowser="true" />
<preference name="stay-in-webview" value="false" />

</widget>
